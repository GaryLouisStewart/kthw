{
    "provider_vars": {
        "region": "eu-west-2",
        "shared_creds_file": "~/.aws/credentials",
        "aws_profile": "gary"
    },
    
    "common_tags": {
        "Environment": "Development",
        "Platform": "centos7",
        "Application": "Bastion Host",
        "Service": "INBP",
        "Terraformed": "true",
        "Created_by": "Gary"
    },

    "vpc_vars": {
        "cidr_block": "10.0.0.0/16",
        "enable_dns_support": true,
        "enable_dns_hostnames": true,
        "enable_classiclink": false,
        "instance_tenancy": "default"
    },

    "bastion_ami_name": "inbp-bastion-kthw",
    "bastion_ssh_keypair": "inbp-bastion-kthw",
    "aws_instance_type": "t2.micro",
    "associate_bastion_public_ip": true,
    "cidr_block_bastion": ["0.0.0.0/0"],
    "create_bastion_insecure": true,
    "create_bastion_secure": false
}
